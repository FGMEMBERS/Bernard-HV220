<?xml version="1.0" encoding="UTF-8"?>
<!-- BERNARD HV 220 - 2007 BARANGER Emmanuel 
                           GEOFFROY Pierre -->

<airplane mass="4550" >

  <approach speed="60" aoa="6" fuel="0.2">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <solve-weight idx="0" weight="180"/>
    <solve-weight idx="1" weight="0"/>
  </approach>

  <cruise speed="345" alt="5000" fuel="0.5">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <solve-weight idx="0" weight="180"/>
    <solve-weight idx="1" weight="0"/>
  </cruise>
  <cockpit x="0.024" y="0" z="0.716" />

  <fuselage ax="4.095" ay="0" az="0.383" bx="-4.715" by="0" bz="0.582"  width="0.464" taper="0.75" midpoint="0.25" />

  <wing x="0.915" y="0.305" z="0.002" 
        chord="2.0" 
        taper="0.5" 
        length="4.101"
        dihedral="2" 
        incidence="1.5" 
        camber="0.03">
        <stall width="4" aoa="20" peak="1.5"/>
        <flap1  start="0.416" end="0.868" lift="1.1" drag="1.2"/>
        <control-input split="true" control="FLAP1" axis="/controls/flight/aileron"/>
        <control-input split="true" control="FLAP1" axis="/controls/flight/aileron-trim"/>
        <control-output prop="/surface-positions/left-aileron-pos-norm" side="left" control="FLAP1" />
        <control-output prop="/surface-positions/right-aileron-pos-norm" side="right" control="FLAP1"/>
  </wing>
  
  <hstab x="-3.592" y="0.139" z="0.511"  
         chord="1.188" 
         taper="0.7" 
         length="1.132">
         <stall width="4" aoa="18" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.5" drag="1.2"/>
         <control-input control="FLAP0" axis="/controls/flight/elevator"/>
         <control-input control="FLAP0" axis="/controls/flight/elevator-trim"/>   
         <control-output prop="/surface-positions/elevator-pos-norm" control="FLAP0"/>
  </hstab>

  <vstab x="-3.605" y="0" z="0.056" 
         sweep="15" 
         chord="2.0" 
         taper="0.2" 
         length="1.552" >
         <stall width="3" aoa="14" peak="1.5"/>
         <flap0  start="0" end="1" lift="1.6" drag="1.2"/>

         <control-input control="FLAP0" axis="/controls/flight/rudder" invert="true"/>
         <control-input control="FLAP0" axis="/controls/flight/rudder-trim" invert="true"/>

         <control-output prop="/surface-positions/rudder-pos-norm" control="FLAP0" min="1" max="-1"/>
  </vstab>

  <!-- Lorraine 12 R.C.R "Radium" (2200 ch)  
       V12 60° inversés suralimenté
       2200 ch à 3900 tr/m 
       Poids : 510 kg -> 1124.3 lb          -->
  <propeller x="2.458" y="0.0" z="0.231" 
             radius="1.2"
             mass="1674" 
             moment="35"      
             cruise-speed="300" 
             cruise-alt="5000" 
             cruise-power="1650" 
             cruise-rpm="1800" 
             takeoff-power="2200"
             takeoff-rpm="2000"
             gear-ratio="0.5"
             contra="1">
             <piston-engine eng-rpm="4000"  
                            eng-power="2200"
                            displacement="1751" 
                            compression="7"/>
             <actionpt x="3.613" y="0.0" z="0.383"/>
             <control-input control="THROTTLE" axis="/controls/engines/engine[0]/throttle"/>
             <control-input control="STARTER" axis="/controls/engines/engine[0]/starter"/>
             <control-input control="MAGNETOS" axis="/controls/engines/engine[0]/magnetos"/>
             <control-input control="MIXTURE" axis="/controls/engines/engine[0]/mixture"/>
  </propeller>

  <!-- Points déffinissant les flotteurs -->
  <!-- Central -->
  <gear x="1.154" y="1.258" z="-1.952" 
        compression="1.5" 
        spring = "15" 
        sfric = "0.85" 
        dfric = "0.75" 
        ignored-by-solver="0"
        on-water="1" 
        on-solid="1" 
        reduce-friction-by-extension="1.15"
        speed-planing="25" 
        spring-factor-not-planing="0.25">
  </gear>

  <gear x="1.154" y="-1.258" z="-1.952" 
        compression="1.5" 
        spring = "15" 
        sfric = "0.85"
        dfric = "0.75" 
        ignored-by-solver="0"
        on-water="1" 
        on-solid="1" 
        reduce-friction-by-extension="1.15"
        speed-planing="25" 
        spring-factor-not-planing="0.25">
  </gear>

  <!-- Avant -->
  <gear x="4.355" y="1.258" z="-1.740" 
        compression="1.2" 
        spring = "15" 
        sfric = "0.8" 
        dfric = "0.7" 
        ignored-by-solver="0"
        on-water="1" 
        on-solid="1" 
        reduce-friction-by-extension="1.15"
        speed-planing="15" 
        spring-factor-not-planing="0.7">
  </gear>

  <gear x="4.355" y="-1.258" z="-1.740" 
        compression="1.2" 
        spring = "15" 
        sfric = "0.8" 
        dfric = "0.7" 
        ignored-by-solver="0"
        on-water="1" 
        on-solid="1" 
        reduce-friction-by-extension="1.15"
        speed-planing="15" 
        spring-factor-not-planing="0.7">
  </gear>

  <!-- Arrière -->
  <gear x="-2.211" y="1.258" z="-1.652" 
        compression="1.8" 
        spring = "8" 
        sfric = "0.9" 
        dfric = "0.8" 
        ignored-by-solver="1"
        on-water="1" 
        on-solid="1" 
        reduce-friction-by-extension="0.9"
        speed-planing="25" 
        spring-factor-not-planing="3">
  </gear>
  <gear x="-2.211" y="-1.258" z="-1.652" 
        compression="1.8" 
        spring = "8" 
        sfric = "0.9" 
        dfric = "0.8" 
        ignored-by-solver="1"
        on-water="1" 
        on-solid="1" 
        reduce-friction-by-extension="0.9"
        speed-planing="25" 
        spring-factor-not-planing="3">
  </gear>

  <!-- Fuel  -->  
  <tank x="1.5" y="0" z="-0.7" capacity="450"/>
  <tank x="0.0" y="0" z="-0.7" capacity="450"/>
  <tank x="-1.5" y="0" z="-0.7" capacity="300"/>

  <ballast x="0.93" y="0.0" z="-1.72" mass="350"/>

  <weight x="0.75" y="0.0" z="-0.5" mass-prop="/sim/weight[0]/weight-lb"/>
  <weight x="-1.0" y="0" z="-0.5" mass-prop="/sim/weight[1]/weight-lb"/>

</airplane>
