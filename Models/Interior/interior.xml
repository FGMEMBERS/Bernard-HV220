<?xml version="1.0"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/Bernard-HV220/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.129 </x-m>
      <y-m>  0.022 </y-m>
      <z-m> -0.088 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.414 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.594 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>intvitres</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor>-179</factor>
    <center>
      <x-m> -0.431 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.803 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>

