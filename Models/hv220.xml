<?xml version="1.0"?>

<PropertyList>

  <path>hv220.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Bernard-HV220/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>bosses</object-name>
    <object-name>echappe</object-name>
    <object-name>poteaux</object-name>
    <object-name>cables</object-name>
    <object-name>ailes</object-name>
    <object-name>aile2</object-name>
    <object-name>derive</object-name>
    <object-name>floteurG</object-name>
    <object-name>floteurD</object-name>
    <object-name>sousfloteurG</object-name>
    <object-name>sousfloteurD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>tourvitre</object-name>
    <object-name>bol1</object-name>
    <object-name>bol2</object-name>
    <object-name>helice1</object-name>
    <object-name>helice2</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>propdisc2</object-name>
    <object-name>propblur2</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass_shader.png</texture>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>bosses</object-name>
    <object-name>echappe</object-name>
    <object-name>poteaux</object-name>
    <object-name>cables</object-name>
    <object-name>ailes</object-name>
    <object-name>aile2</object-name>
    <object-name>derive</object-name>
    <object-name>floteurG</object-name>
    <object-name>floteurD</object-name>
    <object-name>sousfloteurG</object-name>
    <object-name>sousfloteurD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>tourvitre</object-name>
    <object-name>bol1</object-name>
    <object-name>bol2</object-name>
    <object-name>helice1</object-name>
    <object-name>helice2</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Trainée gauche -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Effects/wakeG.xml</path>
    <offsets>
      <x-m>  2.207 </x-m>
      <y-m> -1.257 </y-m>
      <z-m> -1.495 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -45.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Trainée droite -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Effects/wakeD.xml</path>
    <offsets>
      <x-m>  2.207 </x-m>
      <y-m>  1.257 </y-m>
      <z-m> -1.495 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -45.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, avant gauche -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Effects/jetG.xml</path>
    <offsets>
      <x-m> -4.397 </x-m>
      <y-m> -1.257 </y-m>
      <z-m> -1.606 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, avant droite -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Effects/jetD.xml</path>
    <offsets>
      <x-m> -4.397 </x-m>
      <y-m>  1.257 </y-m>
      <z-m> -1.606 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, centre gauche -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Effects/jetmG.xml</path>
    <offsets>
      <x-m> -1.219 </x-m>
      <y-m> -1.257 </y-m>
      <z-m> -1.584 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, centre droite -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Effects/jetmD.xml</path>
    <offsets>
      <x-m> -1.219 </x-m>
      <y-m>  1.257 </y-m>
      <z-m> -1.584 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Interieur -->
  <model>
    <path>Aircraft/Bernard-HV220/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </offsets>
  </model>

  <!-- L'hélice du moteur 1--> 
  <animation>
    <name>HeliceComplete1</name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>helice1</object-name>
    <object-name>bol1</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc1</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur1</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice1</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete1</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.613 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.383 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- L'hélice du moteur 2--> 
  <animation>
    <name>HeliceComplete2</name>
    <object-name>propdisc2</object-name>
    <object-name>propblur2</object-name>
    <object-name>helice2</object-name>
    <object-name>bol2</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc2</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur2</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice2</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete2</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.794 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.383 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m> 3.855 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.349 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <center>
      <x-m> 4.357 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 1.188 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -0.492 </x1-m>
      <y1-m> -2.104 </y1-m>
      <z1-m> -0.004 </z1-m>
      <x2-m> -0.712 </x2-m>
      <y2-m> -4.068 </y2-m>
      <z2-m>  0.082 </z2-m>
    </axis>
  </animation> 

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -0.712 </x1-m>
      <y1-m>  4.068 </y1-m>
      <z1-m>  0.082 </z1-m>
      <x2-m> -0.492 </x2-m>
      <y2-m>  2.104 </y2-m>
      <z2-m> -0.004 </z2-m>
    </axis>
  </animation> 

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>tourvitre</object-name>
    <object-name>vitres</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor>-179</factor>
    <center>
      <x-m> -0.431 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.803 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>
